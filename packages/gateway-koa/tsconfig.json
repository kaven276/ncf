{
   "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strictNullChecks": true,
      "outDir": "./dist",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "sourceMap": true,
      "baseUrl": "./",
   },
   "ts-node": {
     "compilerOptions": {
       "strictNullChecks": false
     },
    "require": ["tsconfig-paths/register"]
  }
}
