{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "mobx": ["../../node_modules/mobx"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./**/*",
  ],
}
